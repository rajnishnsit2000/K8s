apiVersion: v1
kind: ServiceAccount
metadata:
  name: secretless
  namespace: cityapp
---
apiVersion: v1
kind: Service
metadata:
  name: secretsprovider
  namespace: cityapp
spec:
  type: NodePort
  selector:
    app: secretsprovider
  ports:
  - protocol: TCP
    port: 8080
    targetPort: 8080
    nodePort: 30007
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: secretsprovider
  namespace: cityapp
spec:
  replicas: 1
  selector:
    matchLabels:
      app: secretsprovider
  template:
    metadata:
      labels:
        app: secretsprovider
      annotations:
        # https://docs-er.cyberark.com/ConjurCloud/en/Content/Integrations/k8s-ocp/cjr-k8s-secrets-provider-ref.htm
        conjur.org/container-mode: sidecar
        conjur.org/secrets-destination: file
        conjur.org/jwt-token-path: /var/run/secrets/tokens/jwt
        conjur.org/conjur-secrets.secretsprovider: |
          - dbaddr: data/jtan/db_cityapp/address
          - dbuser: data/jtan/db_cityapp/username
          - dbpass: data/jtan/db_cityapp/password
        conjur.org/secret-file-path.secretsprovider: ./worlddb.json
        conjur.org/secret-file-format.secretsprovider: json
        conjur.org/secrets-refresh-interval: 10s
    spec:
      serviceAccountName: secretless
      containers:
      - name: cityapp
        image: docker.io/joetanx/cityapp:php
        imagePullPolicy: IfNotPresent
        volumeMounts:
        - name: conjur-secrets
          mountPath: /conjur
          readOnly: true
      - name: secretsprovider
        image: docker.io/cyberark/secrets-provider-for-k8s:latest
        imagePullPolicy: IfNotPresent
        volumeMounts:
        - name: podinfo
          mountPath: /conjur/podinfo
        - name: conjur-secrets
          mountPath: /conjur/secrets
        - name: jwt-token
          mountPath: /var/run/secrets/tokens
        env:
        # https://docs-er.cyberark.com/ConjurCloud/en/Content/Integrations/k8s-ocp/cjr-k8s-secrets-provider-ref.htm
        - name: MY_POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: MY_POD_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        envFrom:
        - configMapRef:
            name: apps-cm
      volumes:
      - name: podinfo
        downwardAPI:
          items:
          - path: annotations
            fieldRef:
              fieldPath: metadata.annotations
      - name: conjur-secrets
        emptyDir:
          medium: Memory
      - name: jwt-token
        projected:
          sources:
          - serviceAccountToken:
              path: jwt
              expirationSeconds: 6000
              audience: vxlab
